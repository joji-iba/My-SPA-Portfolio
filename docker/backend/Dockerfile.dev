FROM golang:1.25-alpine

WORKDIR /app

# 依存関係用のパッケージをインストール
RUN apk add --no-cache git

# Airをインストール（開発用）
RUN go install github.com/air-verse/air@latest

# PATH を通す（Go install は /go/bin に入る）
ENV PATH="/go/bin:$PATH"

# Go module 関連ファイルをコピー
COPY go.mod go.sum ./
RUN go mod download

# アプリケーションのソースをコピー
COPY . .

# ポート公開
EXPOSE 8080

# 開発用のコマンド（Airを使用）
CMD ["air"]
